### Environments

# Database
choose_db()
{
	choose WGEN_DB WGEN_DB_ $@
}

alias marto="sqlplus 'marto/martoabc01@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=analytics1)(PORT=1521)))(CONNECT_DATA=(SERVICE_NAME=analytic.world)))'"
alias avo="rlwrap sqlplus avo/avoabc01@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=dmc100.mc.wgenhq.net)(PORT=1521)))(CONNECT_DATA=(SERVER=DEDICATED)(SERVICE_NAME=analytic.world)))"
alias avodev="rlwrap sqlplus avo_dev/avo_devabc01@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=dmc100.mc.wgenhq.net)(PORT=1521)))(CONNECT_DATA=(SERVER=DEDICATED)(SERVICE_NAME=analytic.world)))"
alias avor="rlwrap sqlplus avo_research/avo_researchabc01@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=dmc100.mc.wgenhq.net)(PORT=1521)))(CONNECT_DATA=(SERVER=DEDICATED)(SERVICE_NAME=analytic.world)))"

### Projects

# Burst Algo Porting Project
path_prepend "$HOME/projects/bapp/bin"

# Burst Avocado
path_append "$HOME/projects/avocado/software/util/bin"

# Skylight
path_set "$HOME/projects/skylight" SKYLIGHT_HOME
export CATALINA_OPTS="-Dskylight.env.config.dir=$SKYLIGHT_HOME/conf -Dwgspring.infrastructure.wsclient.enrollment.datasource='Live' -Djavax.net.ssl.trustStoreType='KeychainStore' -Djavax.net.ssl.trustStoreProvider='Apple'"
