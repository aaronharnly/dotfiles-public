# Stuff common to any WGen machine

### Paths
path_append "$HOME/wgen-software/crossplatform/bin"
path_append "$HOME/wgen-software/$PLATFORM/bin"
path_append "$HOME/burst/algo/bin"
path_append "$HOME/burst/batch/bin"

### Applications
# CVS
export CVSROOT=:pserver:aharnly@repository.wgenhq.net:/home/cvs/repository
export CVS_RSH=ssh
export CVSIGNORE=".classpath .metadata .settings .project .pydevproject *.pyc wgen-jar .git .gitignore .DS_Store *.class"

# CX_Oracle
path_append "/Library/Python/2.6/site-packages/cx_Oracle-5.0.3-py2.6-macosx-10.6-universal.egg" PYTHONPATH

# FogBugz
path_append "$HOME/external-software/$PLATFORM/stow/fogbugz/bin"
export FOGBUGZ_URL="https://www3.wgen.net/fogbugz/"
export FOGBUGZ_USER="aharnly"
export FOGBUGZ_FILE="$HOME/.fogbugz"

# Oracle
path_set "$HOME/wgen-software/crossplatform/etc/oracle/tns-admin" TNS_ADMIN
INSTANTCLIENT_DIR="$HOME/external-software/$PLATFORM/stow/instantclient_10_2"
